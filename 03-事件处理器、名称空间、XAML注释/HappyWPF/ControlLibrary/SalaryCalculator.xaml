<UserControl x:Class="ControlLibrary.SalaryCalculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="240"
             Height="160"
             Background="LightBlue">
    <Canvas>
        <Label Content="基本工资："
               Canvas.Left="12"
               Canvas.Top="12"
               Height="28"
               Name="Label1" />
        <Label Content="岗位工资："
               Canvas.Left="12"
               Canvas.Top="48"
               Height="28"
               Name="Label2" />
        <Label Content="实际工资："
               Canvas.Left="12"
               Canvas.Top="84"
               Height="28"
               Name="Label3" />
        <TextBox Canvas.Left="87"
                 TextWrapping="Wrap"
                 Name="textBox1"
                 Canvas.Top="17"
                 Width="120"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Center" />
        <TextBox Canvas.Left="87"
                 TextWrapping="Wrap"
                 Name="textBox2"
                 Canvas.Top="53"
                 Width="120"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top" />
        <TextBox Canvas.Left="87"
                 TextWrapping="Wrap"
                 Name="textBox3"
                 Canvas.Top="89"
                 Width="120"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top" />
        <Button Content="计算"
                Name="button1"
                Canvas.Left="17"
                Canvas.Top="124"
                RenderTransformOrigin="-1.43,0.606"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="190"
                Click="Button_Click" />

    </Canvas>
</UserControl>
