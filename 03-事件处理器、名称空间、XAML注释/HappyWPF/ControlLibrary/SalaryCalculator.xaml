<UserControl x:Class="ControlLibrary.SalaryCalculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="240"
             Height="160"
             Background="LightBlue">
    <Canvas>
        <Label Canvas.Left="12"
               Canvas.Top="12"
               Content="基本工资"
               Height="28"
               Name="label1" />
        <Label Canvas.Left="12"
               Canvas.Top="48"
               Content="岗位工资"
               Height="28"
               Name="label2" />
        <Label Canvas.Left="12"
               Canvas.Top="84"
               Content="实际工资"
               Height="28"
               Name="label3" />
        <TextBox Canvas.Left="80"
                 Canvas.Top="12"
                 Height="28"
                 Width="140"
                 Name="textBox1"
                 Background="LightSkyBlue" />
        <TextBox Canvas.Left="80"
                 Canvas.Top="48"
                 Height="28"
                 Width="140"
                 Name="textBox2"
                 Background="LightSkyBlue" />
        <TextBox Canvas.Left="80"
                 Canvas.Top="84"
                 Height="28"
                 Width="140"
                 Name="textBox3"
                 Background="LightSkyBlue" />
        <Button Canvas.Left="12"
                Canvas.Top="120"
                Height="28"
                Width="216"
                Name="button1"
                Content="计算"
                Click="button1_Click" />
    </Canvas>
</UserControl>
